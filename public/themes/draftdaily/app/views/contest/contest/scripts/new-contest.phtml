    $(document.body).on('change', '#sports', function(e) {
        var sportsID = $(this).val();
        $.ajax({
            url: '/contest-ajax-handler',
            type: 'POST',
            dataType: 'json',
            data: {
                method: 'getcontestdata',
                sportsid: sportsID
            },
            beforeSend: function() {

            },
            success: function(response) {
                $("#time").empty();
                $(".viewgames").empty();

                if (response.code == '200') {
                    $("#newcontest").css('display', 'block');
                    $("#matcherr").css('display', 'none');
                    $.each(response.data, function(index, value) {
                        if (value > 1) {
                            $("#time").append('<option value="' + index + '">' + index + ' ' + value + ' games' + '</option>');
                        } else {
                            $("#time").append('<option value="' + index + '">' + index + ' ' + value + ' game' + '</option>');
                        }

                    });
                    $.each(response.gamesdata, function(index, value) {
                        $(".viewgames").append('<option value="' + index + '">' + index + '</option>');
                    });
                } else {
                    $("#newcontest").css('display', 'none');
                    $("#matcherr").css('display', 'block');
                }
            }
        });

    });

    $(document.body).on('click', '.showgamelist', function(e) {
        $('.viewgames').toggle('slow');

    });

    $(document.body).on('click', '#playwithFriend', function(e) {
        if ($('#playwithFriend').is(':checked')) {
            $('#name').show();
        }
    });

    $(document.body).on('click', '#playwithAnyone', function(e) {
        if ($('#playwithAnyone').is(':checked')) {
            $('#name').hide();
        }
    });



    /**
