    $(document.body).on('change', '#teamsize', function() {
        var ctype = $('#ctype').attr('data-type');
        if (ctype == 2) {
            $('#prize').html('');
            $('#prize').append('<option value="1">Winner Takes All</option>');
            $('#prize').append('<option value="2">Top 2 Win</option>');
            var limit = $(this).val();
           
            if ((limit > 3) && (limit <= 5)) {
                $('#prize').append('<option value="3">Top 3 Win</option>');
            } else if (limit > 5) {
                $('#prize').append('<option value="3">Top 3 Win</option>');
                if (limit > 5) {
                    $('#prize').append('<option value="4">Top 5 Win</option>');
                }
            }
            if (limit % 2 == 0) {
                $('#prize').append('<option value="5">50/50</option>');
            }
        }
    });

